#!/usr/bin/clitoris  ## -*- shell-script -*-

$ (cd "${srcdir}"; git describe --dirty --abbrev=7) | \
  sed -e 's/^v//' -e 's/-g/-/' -e 's/-/-git/' -e 'y/-/./' > "scmver_01.version"
$ if test -s "scmver_01.version"; then \
	yuck scmver "${srcdir}/"; \
  fi
< scmver_01.version
$ rm -f -- "scmver_01.version"
$

