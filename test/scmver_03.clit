$ if test -d "${srcdir}/.git"; then \
	yuck scmver "${srcdir}/" > ".test.ver"; \
  else \
	touch ".test.ver"; \
  fi
$ if test -s ".test.ver"; then \
	yuck scmver -n --reference ".test.ver"; \
  fi
< .test.ver
$ rm -f -- .test.ver
$

